<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <AssemblyName>NoobCraft</AssemblyName>
    <ApplicationIcon>resources/NOOBCRAFT.ico</ApplicationIcon>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="resources\mods.json" />
    <EmbeddedResource Include="resources\mods\*.jar" />
  </ItemGroup>

</Project>
